<script setup>
import { reactive, computed } from 'vue'
import { useAuthStore } from '../stores/auth.js'

// èªè¨¼ã‚¹ãƒˆã‚¢
const authStore = useAuthStore()

// ãƒ•ã‚©ãƒ¼ãƒ ãƒ‡ãƒ¼ã‚¿
const formData = reactive({
  email: '',
  password: '',
  remember: false
})

// ãƒ•ã‚©ãƒ¼ãƒ ãƒãƒªãƒ‡ãƒ¼ã‚·ãƒ§ãƒ³
const isFormValid = computed(() => {
  return formData.email.trim() !== '' && formData.password.trim() !== ''
})

// ãƒ­ã‚°ã‚¤ãƒ³å‡¦ç†
const handleLogin = async () => {
  // ã‚¨ãƒ©ãƒ¼ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚¯ãƒªã‚¢
  authStore.clearError()
  
  try {
    const result = await authStore.login(
      formData.email.trim(),
      formData.password,
      formData.remember
    )
    
    if (result.success) {
      // ãƒ­ã‚°ã‚¤ãƒ³æˆåŠŸæ™‚ã®å‡¦ç†
      console.log('ãƒ­ã‚°ã‚¤ãƒ³æˆåŠŸ:', result.message)
      // ãƒšãƒ¼ã‚¸ãƒªãƒ­ãƒ¼ãƒ‰ã¾ãŸã¯ãƒ«ãƒ¼ãƒˆå¤‰æ›´
      // ã“ã®å®Ÿè£…ã§ã¯å˜ç´”ã«ãƒšãƒ¼ã‚¸ãƒªãƒ­ãƒ¼ãƒ‰ã§èªè¨¼çŠ¶æ…‹ã‚’åæ˜ 
      window.location.reload()
    }
    // ã‚¨ãƒ©ãƒ¼ã¯ authStore.error ã«è‡ªå‹•è¨­å®šã•ã‚Œã‚‹
    
  } catch (error) {
    console.error('ãƒ­ã‚°ã‚¤ãƒ³å‡¦ç†ã‚¨ãƒ©ãƒ¼:', error)
  }
}

// ãƒ†ã‚¹ãƒˆã‚¢ã‚«ã‚¦ãƒ³ãƒˆå…¥åŠ›
const fillTestAccount = () => {
  formData.email = 'test@example.com'
  formData.password = 'password123'
  formData.remember = true
}
</script>

