<script setup>
import { ref, computed, onMounted } from 'vue'
import { useProjectsStore } from '../stores/projects.js'
import ProjectForm from './ProjectForm.vue'

// ãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆç®¡ç†ã‚¹ãƒˆã‚¢
const projectsStore = useProjectsStore()

// ãƒ­ãƒ¼ã‚«ãƒ«çŠ¶æ…‹
const showCreateForm = ref(false)
const selectedStatus = ref('')
const editingProject = ref(null)

// è¨ˆç®—ãƒ—ãƒ­ãƒ‘ãƒ†ã‚£
const statusCounts = computed(() => ({
  proposed: projectsStore.projectsByStatus('proposed').length,
  contracted: projectsStore.projectsByStatus('contracted').length,
  completed: projectsStore.projectsByStatus('completed').length
}))

const totalAmount = computed(() => projectsStore.totalAmount)

// ã‚³ãƒ³ãƒãƒ¼ãƒãƒ³ãƒˆåˆæœŸåŒ–
onMounted(async () => {
  if (projectsStore.projects.length === 0) {
    await projectsStore.fetchProjects()
  }
})

// ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹å¤‰æ›´
const handleStatusFilter = async (status) => {
  selectedStatus.value = status === selectedStatus.value ? '' : status
  await projectsStore.filterByStatus(selectedStatus.value)
}

// ãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆä½œæˆãƒ•ã‚©ãƒ¼ãƒ åˆ‡ã‚Šæ›¿ãˆ
// ProjectForm ãƒ¢ãƒ¼ãƒ€ãƒ«åˆ¶å¾¡
const openCreateForm = () => {
  editingProject.value = null
  showCreateForm.value = true
}

const openEditForm = (project) => {
  editingProject.value = project
  showCreateForm.value = true
}

const closeProjectForm = () => {
  showCreateForm.value = false
  editingProject.value = null
}

const handleFormSuccess = (result) => {
  console.log(result.message)
  projectsStore.fetchProjects()
}

const deleteProject = async (project) => {
  if (confirm(`ã€Œ${project.company_name}ã€ã‚’å‰Šé™¤ã—ã¾ã™ã‹ï¼Ÿã“ã®æ“ä½œã¯å–ã‚Šæ¶ˆã›ã¾ã›ã‚“ã€‚`)) {
    const result = await projectsStore.deleteProject(project.id)
    if (result.success) {
      console.log('ãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆã‚’å‰Šé™¤ã—ã¾ã—ãŸ')
    } else {
      console.error('å‰Šé™¤ã‚¨ãƒ©ãƒ¼:', result.error)
    }
  }
}

// æ—¥ä»˜ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ
const formatDeadline = (deadline) => {
  const date = new Date(deadline)
  return date.toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  })
}

// ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹è¡¨ç¤ºè‰²
const getStatusColor = (status) => {
  const colors = {
    proposed: 'bg-yellow-100 text-yellow-800',
    contracted: 'bg-blue-100 text-blue-800',
    completed: 'bg-green-100 text-green-800'
  }
  return colors[status] || 'bg-gray-100 text-gray-800'
}
</script>

